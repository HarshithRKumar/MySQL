--SELECT * FROM ProductSQL WHERE category in('Fashion','Home Appliances');

SELECT c.name,c.customer_id,sum(o.total_amount) as Revenue,o.order_status,p.payment_date,p.payment_method 
FROM customers c JOIN orders o on c.customer_id=o.customer_id
JOIN payments p on p.order_id=o.order_id 
WHERE total_amount>5000
GROUP by payment_method;
